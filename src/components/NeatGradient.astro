<canvas id="gradient" class="absolute w-[100%] h-[100%] top-0 left-0 -z-10 max-h-[100vh]"></canvas>

<script>
    import { NeatGradient } from "@firecms/neat";

    // Config de ejemplo (ajusta a tu gusto)
    const config = {
        colors: [
            {
                color: '#FFFFFF',
                enabled: true,
            },
            {
                color: '#EFE2CE',
                enabled: true,
            },
            {
                color: '#D5ECEB',
                enabled: true,
            },
            {
                color: '#E4E4E4',
                enabled: true,
            },
            {
                color: '#F6FFFF',
                enabled: true,
            },
        ],
        speed: 8,
        horizontalPressure: 4,
        verticalPressure: 5,
        waveFrequencyX: 4,
        waveFrequencyY: 3,
        waveAmplitude: 2,
        shadows: 4,
        highlights: 7,
        colorBrightness: 1,
        colorSaturation: 4,
        wireframe: false,
        colorBlending: 7,
        backgroundColor: '#00A2FF',
        backgroundAlpha: 1,
        grainScale: 100,
        grainSparsity: 0,
        grainIntensity: 0.05,
        grainSpeed: 0.3,
        resolution: 0.5,
    };

    const neat = new NeatGradient({
        ref: document.getElementById("gradient") as HTMLCanvasElement,
        ...config
    });
</script>
